<script>
    // Enhanced carousel functionality
    document.addEventListener('DOMContentLoaded', function() {
        const carousel = document.getElementById('slide');
        const carouselInstance = new bootstrap.Carousel(carousel, {
            interval: false,
            wrap: true
        });

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (e.key === 'ArrowLeft') {
                carouselInstance.prev();
            } else if (e.key === 'ArrowRight') {
                carouselInstance.next();
            }
        });

        // Smooth scroll with mouse wheel
        let lastWheelTime = 0;
        document.addEventListener('wheel', function(e) {
            const now = Date.now();
            if (now - lastWheelTime < 600) return;
            
            if (e.deltaY > 0) {
                carouselInstance.next();
            } else if (e.deltaY < 0) {
                carouselInstance.prev();
            }
            lastWheelTime = now;
        }, { passive: true });

        // Add smooth transitions to images on carousel change
        carousel.addEventListener('slide.bs.carousel', function() {
            const activeItem = carousel.querySelector('.carousel-item.active');
            if (activeItem) {
                const img = activeItem.querySelector('img');
                if (img) {
                    img.style.transition = 'all 0.6s ease-out';
                }
            }
        });

        // Enhanced button feedback
        const buttons = document.querySelectorAll('.carousel-caption a');
        buttons.forEach(button => {
            button.addEventListener('mousedown', function() {
                this.style.transform = 'scale(0.97)';
            });
            button.addEventListener('mouseup', function() {
                this.style.transform = 'scale(1)';
            });
            button.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
            });
        });

        // Prevent audio autoplay on mobile (for better UX)
        const audio = document.getElementById('audio');
        if (audio) {
            audio.muted = true;
            audio.play().catch(() => {
                // Autoplay was prevented, that's okay
            });
            
            // Allow unmuting on first user interaction
            document.addEventListener('click', function() {
                audio.muted = false;
            }, { once: true });
        }
    });

    // Detect device and add class
    function detectDevice() {
        const ua = navigator.userAgent;
        const isIphone = /iPhone/.test(ua);
        const isAndroid = /Android/.test(ua);
        
        if (isIphone) {
            document.documentElement.classList.add('device-iphone');
        } else if (isAndroid) {
            document.documentElement.classList.add('device-android');
        }
    }
    detectDevice();
</script>

